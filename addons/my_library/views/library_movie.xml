<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='library_movie_action' model='ir.actions.act_window'>
        <field name="name">Library Movies</field>
        <field name="res_model">library.movie</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="My Library" id="library_base_menu" />
    <menuitem name="Movies" id="library_movie_menu" parent="library_base_menu" action="library_movie_action"/>

    <!-- Form View -->
    <record id="library_movie_view_form" model="ir.ui.view">
        <field name="name">Library Movie Form</field>
        <field name="model">library.movie</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="author_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="short_name"/>
                        <field name="date_release"/>
                        <field name="color" widget="int_color"/>
                        <field name="state"/>
                        <field name="image"/>
                        <field name="html_description"/>
                        <!-- <field name="color" /> -->
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="library_movie_view_tree" model="ir.ui.view">
        <field name="name">Library Movie List</field>
        <field name="model">library.movie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state"/>
                <field name="date_release"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="library_movie_view_search" model="ir.ui.view">
        <field name="name">Library Movie Search</field>
        <field name="model">library.movie</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state"/>
                <field name="author_ids"/>
                <filter string="Without Authors" name="without_author" domain="[('author_ids','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>
